<Page x:Class="Chess.View.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chess.View"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="Game">
    <Page.Resources>
        <Style TargetType="Button" x:Key="UsersButton">
            <Setter Property="MinWidth" Value="225"/>
        </Style>
    </Page.Resources>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        <Grid ShowGridLines="True" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button Style = "{StaticResource UsersButton}" Content="Current time"/>
            <Button Style = "{StaticResource UsersButton}" >
                <Image Source="D:\COURSE_PROJECT\Images\LeftBackArrow.png"/>
            </Button>
            <Button Style = "{StaticResource UsersButton}" >
                <Image Source="D:\COURSE_PROJECT\Images\RightBackArrow.png"/>
            </Button>
            <Button Style = "{StaticResource UsersButton}" >
                <Image Source="D:\COURSE_PROJECT\Images\Leaving.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
